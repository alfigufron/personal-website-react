{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "indent": ["off", 2, { "SwitchCase": 1 }],
        "quotes": ["warn", "double"],
        "array-bracket-spacing": ["warn", "never"],
        "react/react-in-jsx-scope": "off",
        "react/prop-types": "off",
        "react/display-name": "off",
        "prettier/prettier": ["warn", {
			"endOfLine": "auto",
			"singleQuote": false,
			"arrowParens": "avoid",
			"bracketSpacing": true
		}]
    }
}
